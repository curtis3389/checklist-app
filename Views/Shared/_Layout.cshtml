<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - chcklst!</title>
    <link rel="shortcut icon" href="icon.svg" />
    <link rel="stylesheet" href="/lib/skeleton/css/normalize.css" />
    <link rel="stylesheet" href="/lib/skeleton/css/skeleton.css" />
    <link rel="stylesheet" href="/css/custom.css" />
    <link rel="stylesheet" href="/css/site.css" />
    @await RenderSectionAsync("Styles", required: false)
    <script>
      var require = {
        baseUrl: '/',
        paths: {
          'preact': 'lib/preact/dist/preact.umd',
          'preact/hooks': 'lib/preact/hooks/dist/hooks.umd',
          'preact/jsx-runtime': 'lib/preact/jsx-runtime/dist/jsxRuntime.umd',
          'preact-router': 'lib/preact-router/dist/preact-router.umd'
        }
      };
    </script>
    <script src="https://cdn.jsdelivr.net/npm/requirejs@2.3.6/require.min.js"></script>
</head>
<body>
    @RenderBody()
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
